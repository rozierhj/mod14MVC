
{{#ifEqual loginUser true}}
<div class="card text-center" style="margin-top: 15px; width: 600px;">
  <div class="card-header">
    Sign In
  </div>
   <div id="error-message"></div>
  <div class="card-body">
    <div class="input-group mb-3">
  {{!-- <span class="input-group-text" id="basic-addon1">@</span> --}}
  <input id="signin-user-name" type="text" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
</div>
{{!-- <label for="inputPassword5" class="form-label">Password</label> --}}
<input id="signin-password" type="password" placeholder="Password" id="inputPassword5" class="form-control" aria-describedby="passwordHelpBlock">
<div id="passwordHelpBlock" class="form-text" style="margin: 10px;">
  Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
</div>
    <button id="sign-in-user" type="button" class="btn btn-primary">Sign In</button>
    <button id="close-sign-in" type="button" class="btn btn-primary">Close</button>
    <button id="create-new-account" type="button" class="btn btn-link" style="width: 200px;">Create Account</button>
  </div>
  <div class="card-footer text-body-secondary">
  </div>
</div>
{{/ifEqual}}

{{#ifEqual createUser true}}
<div class="card text-center" style="margin-top: 15px; width: 600px;">
  <div class="card-header">
    Create Account
  </div>
  <div id="error-message"></div>
  <div class="card-body">
    <div class="input-group mb-3">
  {{!-- <span class="input-group-text" id="basic-addon1">@</span> --}}
  <input id="create-username" type="text" class="form-control" placeholder="Create Username" aria-label="Username" aria-describedby="basic-addon1">
</div>
{{!-- <label for="inputPassword5" class="form-label">Password</label> --}}
<input id="create-password" type="password" placeholder="Create Password" id="inputPassword5" class="form-control" aria-describedby="passwordHelpBlock">
<div id="passwordHelpBlock" class="form-text">
  Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
</div>
    <button id="create-my-account" type="button" class="btn btn-primary" style="width: 200px;">Create Account</button>
    <button id="close-sign-up" type="button" class="btn btn-primary">Close</button>
    {{!-- <button type="button" class="btn btn-link" style="width: 200px;">Create Account</button> --}}
  </div>
  <div class="card-footer text-body-secondary">
  </div>
</div>
{{/ifEqual}}

